---
import '../styles/global.css'
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="border-b-4 p-8">
			<h1 class="text-4xl m-4">{title}</h1>
			<a href="/" class="m-4 border-1 px-2 py-1 hover:bg-black hover:text-white">Back</a>
		</header>
     
		<section class="m-4">
			<slot />
		</section>
	</body>
</html>
